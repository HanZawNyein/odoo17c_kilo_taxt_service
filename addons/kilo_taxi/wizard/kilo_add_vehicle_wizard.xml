<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="kilo_add_vehicle_wizard_view_form" model="ir.ui.view">
        <field name="name">kilo_add_vehicle_wizard_view_form</field>
        <field name="model">kilo.add.vehicle.wizard</field>
        <field name="arch" type="xml">
            <form string="kilo_add_vehicle_wizard_form">
                <sheet>
                    <group>
                        <field name="vehicle_id"/>
                        <field name="driver_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_add_vehicle" string="Add Vehicle" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>